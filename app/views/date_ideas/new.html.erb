<!-- Validation failure messages -->
<% if @date_idea.errors.any? %>
  <% @date_idea.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Date Idea</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_date_idea" method="post" enctype="multipart/form-data">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for date_name -->
      <div class="form-group">
        <label for="date_name" class="control-label">
          Date name
        </label>

        <input type="text" id="date_name" name="date_name" placeholder="Date name" class="form-control" value="<%= @date_idea.date_name %>">
      </div>

      <!-- Label and input for cover_photo -->
      <div class="form-group">
        <label for="cover_photo" class="control-label">
          Cover photo
        </label>

        <input type="text" id="cover_photo" name="cover_photo" placeholder="Cover photo" class="form-control" value="<%= @date_idea.cover_photo %>">
      </div>

      <!-- Label and input for price_category -->
      <div class="form-group">
        <label for="price_category" class="control-label">
          Price category
        </label>

        <input type="text" id="price_category" name="price_category" placeholder="Price category" class="form-control" value="<%= @date_idea.price_category %>">
      </div>

      <!-- Label and input for date_description -->
      <div class="form-group">
        <label for="date_description" class="control-label">
          Date description
        </label>

        <input type="text" id="date_description" name="date_description" placeholder="Date description" class="form-control" value="<%= @date_idea.date_description %>">
      </div>

      <button class="btn btn-success">
        Create Date Idea
      </button>
      or
      <a href="/date_ideas">Cancel</a>
    </form>
  </div>
</div>
